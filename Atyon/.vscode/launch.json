    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start Atyon",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build Atyon",
            "program": "${workspaceFolder}/bin/Debug/net6.0/Atyon.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            // "serverReadyAction": {
            //     "action": "openExternally",
            //     "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            // },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:44332"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
    ],
